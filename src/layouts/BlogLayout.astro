---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <p>Published on: <strong>{frontmatter.pubDate.toString().slice(0,10)}</strong></p>
    <p>Updated on: <strong>{frontmatter.updated.toString().slice(0,10)}</strong></p>
    <p><em>{frontmatter.description}</em></p>
    <p>Written by <em><strong>{frontmatter.author}</strong></em></p>
    <img src={frontmatter.image.url} width="100" alt={frontmatter.image.alt} />
    <slot />
    <div class="tags">
        <p>Tags:</p>
        {frontmatter.tags.map((tag: string) => (
            <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
        ))}
    </div>
</BaseLayout>
<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>